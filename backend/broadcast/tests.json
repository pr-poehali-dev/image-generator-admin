{
  "tests": [
    {
      "name": "Handle OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Get latest broadcast message",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200,
      "bodyMatcher": "partial"
    },
    {
      "name": "Send broadcast with valid admin key",
      "method": "POST",
      "path": "/",
      "headers": {
        "x-admin-key": "admin123"
      },
      "body": {
        "message": "Hello everyone!"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject broadcast without admin key",
      "method": "POST",
      "path": "/",
      "body": {
        "message": "Test message"
      },
      "expectedStatus": 403,
      "expectedBody": {
        "error": "Unauthorized"
      },
      "bodyMatcher": "partial"
    }
  ]
}